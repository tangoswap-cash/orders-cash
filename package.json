{
  "name": "@tangoswapcash/burros",
  "version": "0.0.1",
  "license": "Apache",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tangoswap-cash/burros.git"
  },
  "bugs": {
    "url": "https://github.com/tangoswap-cash/burros/issues"
  },
  "homepage": "https://github.com/tangoswap-cash/burros#readme",
  "keywords": [
    "tangoswap",
    "smartswap",
    "bitcoin-cash",
    "bitcoin",
    "cash",
    "bch",
    "smartbch",
    "limit",
    "orders"
  ],
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "smartbch:deploy": "hardhat --network smartbch deploy",
    "smartbch:export": "hardhat --network smartbch export --export exports/smartbch.json",
    "smartbch-amber:deploy": "hardhat --network smartbch-amber deploy",
    "smartbch-amber:export": "hardhat --network smartbch-amber export --export exports/smartbch-amber.json",
    "export": "hardhat export --export-all exports/deployments.json",
    "testverbose": "hardhat test --verbose",
    "test": "hardhat test",
    "test-smartswap": "hardhat test test/OrdersCashV2.test.ts",
    "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" hardhat coverage",
    "test:gas": "cross-env REPORT_GAS=true yarn test",
    "test-truffle": "scripts/test.sh",
    "prettier": "prettier --write test/**/*.ts && prettier --write contracts/**/*.sol",
    "lint": "yarn prettier && solhint -c .solhint.json contracts/**/*.sol",
    "prepublishOnly": "yarn run build"
  },
  "devDependencies": {
    "@boringcrypto/boring-solidity": "boringcrypto/BoringSolidity#e74c5b2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@truffle/hdwallet-provider": "^2.0.10",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@typechain/truffle-v5": "^8.0.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "ethers-eip712": "^0.2.0",
    "hardhat": "^2.10.0",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-deploy": "^0.11.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "hardhat-watcher": "^2.3.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.22",
    "solidity-coverage": "^0.7.21",
    "truffle": "^5.5.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.2",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
